<?xml version="1.0" encoding="UTF-8"?>

<project>

  <modelVersion>4.0.0</modelVersion>


  <name>Facelift WEB Request Implementation</name>
  <artifactId>web-request</artifactId>
  <groupId>auster</groupId>
  <packaging>jar</packaging>
  <url>https://jean/sites/${pom.groupId}/${pom.artifactId}-${pom.version}/index.html</url>
	
  <version>1.3.1</version>

  <organization>
    <name>Auster Solutions do Brasil</name>
    <url>http://www.auster.com.br/</url>
  </organization>  
  <issueManagement>
    <system>Trac</system>
    <url>https://jean/projects/facelift</url>
  </issueManagement>		
			
  <repositories>
    <!-- Auster Central Repository -->
    <repository>
      <id>auster</id>
      <name>Auster Central Repository</name>
      <url>http://jean/repository</url>
      <layout>legacy</layout>
    </repository>
  </repositories>	
		
  <ciManagement>
    <system>continuum</system>
    <notifiers>
      <notifier>
        <type>mail</type>
        <configuration>
          <address>continuum@auster.com.br</address>
        </configuration>
      </notifier>
    </notifiers>
  </ciManagement> 
 	 
  <scm>
    <connection>scm:svn:svn://continuum@jean/auster/facelift/trunk/facelift-modules/web-request</connection>
  </scm>
 	 
  <distributionManagement>
    <repository>
      <id>auster-central-repo</id>
      <name>Auster Central Repository</name>
      <url>file:///repository/maven-env/central-repository</url>
      <layout>legacy</layout>
    </repository>
    <site>
      <id>local-site</id>
      <url>file:///repository/documentation/sites/${pom.groupId}/${pom.artifactId}-${pom.version}/</url>
    </site>
  </distributionManagement>

  <dependencies>
    <dependency>
      <artifactId>request-base</artifactId>
      <groupId>auster</groupId>
      <version>1.2.2</version>
    </dependency>
    <dependency>
      <artifactId>persistence-bridge</artifactId>
      <groupId>auster</groupId>
      <version>2.0.0</version>
    </dependency>
    <dependency>
      <groupId>auster</groupId>
      <artifactId>facelift-core</artifactId>
      <version>1.2.1</version>
    </dependency>
  </dependencies>

  <reporting>
    <plugins>
      <plugin>
         <groupId>org.codehaus.mojo</groupId>
         <artifactId>taglist-maven-plugin</artifactId>
      </plugin>
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
      <plugin>
         <groupId>org.codehaus.mojo</groupId>
         <artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
      <plugin>
         <groupId>org.codehaus.mojo</groupId>
         <artifactId>jxr-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <rulesets>
            <ruleset>/rulesets/basic.xml</ruleset>
            <ruleset>/rulesets/controversial.xml</ruleset>
          </rulesets>
          <format>xml</format>
          <linkXref>true</linkXref>
          <sourceEncoding>utf-8</sourceEncoding>
          <minimumTokens>100</minimumTokens>
        </configuration>
      </plugin>
      <!-- This customization is needed due to bug MPIR-19 (http://jira.codehaus.org/browse/MPIR-19) -->
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-project-info-reports-plugin</artifactId>
         <reportSets>
            <reportSet>
               <reports>
                  <!-- report>dependencies</report -->
                  <report>project-team</report>
                  <report>mailing-list</report>
                  <report>cim</report>
                  <report>issue-tracking</report>
                  <report>license</report>
                  <report>scm</report>
               </reports>
            </reportSet>
         </reportSets>
      </plugin>   
    </plugins>
  </reporting> 
	
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <resources>
      <resource>
        <directory>${basedir}/target/xdoclet</directory>
        <includes>
          <include>**/*.hbm.xml</include>
        </includes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.hbm.xml</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
	  
    <plugins>
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-compiler-plugin</artifactId>
		<configuration>
		  <source>1.4</source>
		  <target>1.4</target>
		</configuration>
	  </plugin>
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-javadoc-plugin</artifactId>
         <configuration>
            <destDir>/repository/documentation/sites/${pom.groupId}/${pom.artifactId}-${pom.version}/jdocs/</destDir>
             <linksource>true</linksource>
         </configuration>
      </plugin>
      <plugin>
	    <artifactId>xdoclet-maven-plugin</artifactId>
	    <groupId>org.codehaus.mojo</groupId>
	    <executions>
	      <execution>
	        <phase>generate-sources</phase>
	        <goals>
	          <goal>xdoclet</goal>
	        </goals>
	        <configuration>
			  <generatedSourcesDirectory>${project.build.directory}/xdoclet</generatedSourcesDirectory>
	          <tasks>
			    <hibernatedoclet destDir="${project.build.directory}/xdoclet" force="true">
		          <fileset dir="${project.build.sourceDirectory}" includes="**/*.java"/>
	              <hibernate version="3.0" destDir="${project.build.directory}/xdoclet" xmlencoding="ISO-8859-1"/>
	            </hibernatedoclet>
              </tasks>
	        </configuration>
	        </execution>
	      </executions>
	    </plugin> 
    </plugins>     
  </build>

</project>
